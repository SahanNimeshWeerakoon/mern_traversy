    "mongodb": "^3.3.2",
    "mongoose": "^5.7.1",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "nodemon": "^1.19.2"
  }
}
